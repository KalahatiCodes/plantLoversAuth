<!doctype html>
<html>
<head>
    <title>Plant Lovers United Forum</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer"/>
    <link rel="stylesheet" href="style.css">
</head>
  <body id="profilePage">
    <div  class="container">
      <a href="/logout" class="btn btn-default btn-sm fa fa-moon-o">Logout</a>
        <div class="page-header text-center">
            <h1 class="highlightWhite">Plant Lovers Quarry</h1>
            <h3 class="highlightWhite">Plant Bae's Home Forum of Plant Tips, Comments, Questions, and Shop</h3>
            <p>Welcome! You are logged in as <span class="highlightWhite"><%= user.local.email %></span></p>
        </div>


     
          <div class="col-sm-6">
            <div>
            <h3 class="highlightWhite">Shop This Seasons Florals</h3>
              <ul class="plantSelect">
              <% for(var i=0; i<plants.length; i++) {%>
                <li class="plants">
                  <span ><%= plants[i].plant %></span>
                  <span>$<%= plants[i].price %></span>
                  <img class="flowerImg" src="<%= plants[i].src %>">
                  <span><i class="fa fa-cart-shopping" aria-hidden="true"></i></span>
                </li>
                <br>
              <% } %>
              </ul>
            </div>
            <div>
              <h3 class="highlightWhite">Your Cart</h3>
              <ul class="cartSelect">
                <% for(var i=0; i < cart.length; i++) {%>
                  <li class="carts"> 
                    <span ><%= cart[i].plant %></span>
                    <span><%= cart[i].price %></span>
                    <span><i class="fa fa-trash" aria-hidden="true"></i></span>
                  </li>
                <% } %>
                </ul>
                <button>Checkout</button>
            </div>
          </div>

       
            <div class="col-sm-6">
              <div>
              <h3 class="highlightWhite">Posts</h3>
              <ul class="messages">
              <% for(var i=0; i<messages.length; i++) {%>
                <li class="message">
                  <span class="highlightWhite" ><%= messages[i].name %></span>
                  <span><%= messages[i].msg %></span>
                  <span><%= messages[i].thumbUp %></span>
                  <span><%= messages[i].trash %></span>
                  <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
                  <span><i class="fa fa-thumbs-down" aria-hidden="true"></i></span>
                  <span><i class="fa fa-trash" aria-hidden="true"></i></span>
                </li>
              <% } %>
              </ul>
            </div>
            <div id="addMessage">
                <h3 class="highlightWhite">Post A Comment</h3>
              <% if (user.local.email) { %>
                <form action="/messages" method="POST">
                  <input type="text" placeholder="Name" name="name"><input type="text" placeholder="Message" name="msg"><button type="submit">Submit</button>
                </form>
              </div>
              <% } %>
            </div>

    </div>
    <script src="main.js"></script>
  </body>
</html>
